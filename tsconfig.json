{
  "extends": "eslint-config-heimdall/tsconfig.base",
  "compilerOptions": {
    "module": "commonjs",
    "target": "ESNext",
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@config/*": ["src/config/*"],
      "@utils/*": ["src/utils/*"]
    },
    "noErrorTruncation": true
  }
}
